                <TextBox  Grid.Row="10" Grid.Column="2" Text="{Binding VoronoiOctaveWeight, Mode=TwoWay}"/>
                <!--SEED-->
                <TextBlock Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,45,0,0" FontSize="16" FontWeight="DemiBold" Text="Seed"/>
                <Slider  Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0" Maximum="9999" TickFrequency="1000" LargeChange="1000" Value="{Binding VoronoiSeed, Mode=TwoWay}"/>
                <TextBox  Grid.Row="12" Grid.Column="2" Text="{Binding VoronoiSeed, Mode=TwoWay}"/>
                <!--STRENGTH-->
                <TextBlock Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" FontSize="16" FontWeight="DemiBold" Text="Strength"/>
                <Slider  Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0" Maximum="1" TickFrequency="0.1" LargeChange="0.2"  Value="{Binding VoronoiStrength, Mode=TwoWay}"/>
                <TextBox  Grid.Row="14" Grid.Column="2" Text="{Binding VoronoiStrength, Mode=TwoWay}"/>

                <!--APPLICATION-->
                <ComboBox Grid.Row="16" Grid.Column="0" ItemsSource="{Binding ApplicationModeEnum}" SelectedItem="{Binding CurrentApplicationMode, Mode=TwoWay}"></ComboBox>
                <Button Grid.Row="16" Grid.Column="1" Grid.ColumnSpan="2" Content="Apply" Margin="4,0,0,0" FontSize="16" FontWeight="DemiBold" Command="{Binding CalculateCommand}"/>
            </Grid>
        </DataTemplate>

        <!--HYDRAULIC EROSION-->
        <DataTemplate DataType="{x:Type Layer:HydraulicErosionLayer}">
            <Grid Margin="12" Height="{Binding LayerManager.LayerDetailHeight, Mode=OneWay}" MinHeight="950">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Background="{StaticResource LighterBlue}" Margin="0,5,0,10" CornerRadius="25" BorderThickness="0" Height="50"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.25*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Source="{Binding ImagePath}" Margin="8,2,2,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" FontSize="24" FontWeight="DemiBold" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Button Grid.Row="0" Grid.Column="2" Command="{Binding DeleteLayerCommand}" BorderThickness="0" Margin="2,2,8,2" Style="{StaticResource DeleteButton}">
                            <Button.Content>
                                <Image Source="pack://application:,,,/Topographer3D;component/Assets/Icons/DeleteLayer.png" Width="24"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>

                <!--ITERATIONS-->
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,45,0,0" FontSize="16" FontWeight="DemiBold" Text="Iterations"/>
                <Slider  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0" Maximum="500000" TickFrequency="100000" LargeChange="100000"  Value="{Binding HEIterations, Mode=TwoWay}"/>
                <TextBox  Grid.Row="2" Grid.Column="2" Text="{Binding HEIterations, Mode=TwoWay}"/>
                <!--DROPLET LIFETIME-->
                <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,45,0,0" FontSize="16" FontWeight="DemiBold" Text="Droplet Lifetime"/>
                <Slider  Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Minimum="1" Maximum="30" TickFrequency="5" LargeChange="5" Value="{Binding HEMaxDropletLifetime, Mode=TwoWay}"/>
                <TextBox  Grid.Row="4" Grid.Column="2" Text="{Binding HEMaxDropletLifetime, Mode=TwoWay}"/>
                <!--EROSION RADIUS-->
                <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" FontSize="16" FontWeight="DemiBold" Text="Erosion Radius"/>
                <Slider  Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Minimum="1" Maximum="5" TickFrequency="1" LargeChange="1" Value="{Binding HEErosionRadius, Mode=TwoWay}"/>
                <TextBox  Grid.Row="6" Grid.Column="2" Text="{Binding HEErosionRadius, Mode=TwoWay}"/>
                <!--INERTIA-->
                <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,45,0,0" FontSize="16" FontWeight="DemiBold" Text="Inertia"/>
                <Slider  Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0" Maximum="1" TickFrequency="0.1" LargeChange="0.1" Value="{Binding HEInertia, Mode=TwoWay}"/>
                <TextBox  Grid.Row="8" Grid.Column="2" Text="{Binding HEInertia, Mode=TwoWay}"/>
                <!--SEDIMENT CAPACITY-->
                <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,45,0,0" FontSize="16" FontWeight="DemiBold" Text="Sediment Capacity"/>
                <Slider  Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0.5" Maximum="10" TickFrequency="0.5" LargeChange="0.5" Value="{Binding HESedimentCapacityFactor, Mode=TwoWay}"/>
                <TextBox  Grid.Row="10" Grid.Column="2" Text="{Binding HESedimentCapacityFactor, Mode=TwoWay}"/>
                <!--SEDIMENT MINIMUM-->
                <TextBlock Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" FontSize="16" FontWeight="DemiBold" Text="Sediment Minimum"/>
                <Slider  Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0" Maximum="1" TickFrequency="0.1" LargeChange="0.1" Value="{Binding HEMinSedimentCapacity, Mode=TwoWay}"/>
                <TextBox  Grid.Row="12" Grid.Column="2" Text="{Binding HEMinSedimentCapacity, Mode=TwoWay}"/>
                <!--EROSION SPEED-->
                <TextBlock Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,45,0,0" FontSize="16" FontWeight="DemiBold" Text="Erosion Speed"/>
                <Slider  Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0" Maximum="1" TickFrequency="0.1" LargeChange="0.2"  Value="{Binding HEErodeSpeed, Mode=TwoWay}"/>
                <TextBox  Grid.Row="14" Grid.Column="2" Text="{Binding HEErodeSpeed, Mode=TwoWay}"/>
                <!--DEPOSITION SPEED-->
                <TextBlock Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" FontSize="16" FontWeight="DemiBold" Text="Deposition Speed"/>
                <Slider  Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0" Maximum="1" TickFrequency="0.1" LargeChange="0.2"  Value="{Binding HEDepositSpeed, Mode=TwoWay}"/>
                <TextBox  Grid.Row="16" Grid.Column="2" Text="{Binding HEDepositSpeed, Mode=TwoWay}"/>
                <!--EVAPORATION SPEED-->
                <TextBlock Grid.Row="17" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" FontSize="16" FontWeight="DemiBold" Text="Evaporation Speed"/>
                <Slider  Grid.Row="18" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0" Maximum="1" TickFrequency="0.1" LargeChange="0.2"  Value="{Binding HEEvaporateSpeed, Mode=TwoWay}"/>
                <TextBox  Grid.Row="18" Grid.Column="2" Text="{Binding HEEvaporateSpeed, Mode=TwoWay}"/>
                <!--GRAVITATION-->
                <TextBlock Grid.Row="19" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,45,0,0" FontSize="16" FontWeight="DemiBold" Text="Gravitation"/>
                <Slider  Grid.Row="20" Grid.Column="0" Grid.ColumnSpan="2" Minimum="0" Maximum="5" TickFrequency="1" LargeChange="1"  Value="{Binding HEGravity, Mode=TwoWay}"/>
                <TextBox  Grid.Row="20" Grid.Column="2" Text="{Binding HEGravity, Mode=TwoWay}"/>

                <!--APPLICATION-->
                <Button Grid.Row="22" Grid.Column="0" Grid.ColumnSpan="3" Content="Apply" Margin="4,0,0,0" FontSize="16" FontWeight="DemiBold" Command="{Binding CalculateCommand}"/>
            </Grid>
        </DataTemplate>

        <!--DETAIL COLORIZATION-->
        <DataTemplate DataType="{x:Type Layer:DetailColorizationLayer}">
            <Grid Margin="12" Height="{Binding LayerManager.LayerDetailHeight, Mode=OneWay}" MinHeight="800">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Background="{StaticResource LighterBlue}" Margin="0,5,0,10" CornerRadius="25" BorderThickness="0" Height="50"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.25*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Source="{Binding ImagePath}" Margin="8,2,2,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" FontSize="24" FontWeight="DemiBold" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Button Grid.Row="0" Grid.Column="2" Command="{Binding DeleteLayerCommand}" BorderThickness="0" Margin="2,2,8,2" Style="{StaticResource DeleteButton}">
                            <Button.Content>
                                <Image Source="pack://application:,,,/Topographer3D;component/Assets/Icons/DeleteLayer.png" Width="24"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>

                <RadioButton Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,45,0,0" GroupName="ColorRBs" IsChecked="{Binding Gradient1RB}">
                    <RadioButton.Content>
                        <Rectangle Fill="{Binding Gradient1}"/>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" GroupName="ColorRBs" IsChecked="{Binding Gradient2RB}">
                    <RadioButton.Content>
                        <Rectangle Fill="{Binding Gradient2}"/>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" GroupName="ColorRBs" IsChecked="{Binding Gradient3RB}">
                    <RadioButton.Content>
                        <Rectangle Fill="{Binding Gradient3}"/>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" GroupName="ColorRBs" IsChecked="{Binding Gradient4RB}">
                    <RadioButton.Content>
                        <Rectangle Fill="{Binding Gradient4}"/>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" GroupName="ColorRBs" IsChecked="{Binding Gradient5RB}">
                    <RadioButton.Content>
                        <Rectangle Fill="{Binding Gradient5}"/>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" GroupName="ColorRBs" IsChecked="{Binding Gradient6RB}">
                    <RadioButton.Content>
                        <Rectangle Fill="{Binding Gradient6}"/>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0" GroupName="ColorRBs" IsChecked="{Binding Gradient7RB}">
                    <RadioButton.Content>
                        <Rectangle Fill="{Binding Gradient7}"/>
                    </RadioButton.Content>
                </RadioButton>

                <Label Grid.Row="15">Color Shift</Label>
                <Slider Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2" Minimum="-0.5" Maximum="0.5" TickFrequency="0.1" LargeChange="0.1" Value="{Binding ColorShift, Mode=TwoWay}"/>
                <TextBox Grid.Row="16" Grid.Column="3" Text="{Binding ColorShift}"/>

                <!--COLOR MODE-->
                <TextBlock Grid.Row="17" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,5" FontSize="16" FontWeight="DemiBold" Text="Color Application Mode"/>
                <ComboBox Grid.Row="18" Grid.Column="0" Grid.ColumnSpan="3" Height="30" ItemsSource="{Binding ColorApplicationModeEnum}" SelectedItem="{Binding CurrentColorApplicationMode, Mode=TwoWay}"></ComboBox>

                <!--APPLICATION-->
                <Button Grid.Row="20" Grid.Column="0" Grid.ColumnSpan="3" Content="Apply" Margin="4,0,0,0" FontSize="16" FontWeight="DemiBold" Command="{Binding CalculateCommand}"/>
            </Grid>
        </DataTemplate>

    </UserControl.Resources>





    <!--LAYERS-->

    <ScrollViewer>
        <Grid>
            <ItemsControl Grid.Row="0" ItemsSource="{Binding LayerManager.LayerDetails}"  IsEnabled="{Binding LayerManager.IsShowDetails}" Visibility="{Binding LayerManager.IsShowDetailsVisibility}"/>

            <StackPanel Grid.Row="0" IsEnabled="{Binding LayerManager.IsLayerSelection}" Visibility="{Binding LayerManager.IsLayerSelectionVisibility}" Margin="12" >
                <Border Background="{StaticResource LighterBlue}" Margin="0,5,0,10" CornerRadius="25" BorderThickness="0" Height="50">
                    <TextBlock Text="Add new Layer" FontSize="24" FontWeight="DemiBold" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <TextBlock Text="Raising" Margin="0,0,0,5"/>
                <Button Content="Height" Command="{Binding LayerManager.AddLayerCommand}" CommandParameter="Height"/>
                <Button Content="Slope" Command="{Binding LayerManager.AddLayerCommand}" CommandParameter="Slope"/>
                <Button Content="Island" Command="{Binding LayerManager.AddLayerCommand}" CommandParameter="Island"/>
                <Button Content="Open Simplex Noise" Command="{Binding LayerManager.AddLayerCommand}" CommandParameter="OpenSimplex"/>
                <!--<Button Content="Voronoi Noise" Command="{Binding LayerManager.AddLayerCommand}" CommandParameter="Voronoi"/>-->

                <TextBlock Text="Erosion" Margin="0,15,0,5"/>
                <Button Content="Hydraulic" Command="{Binding LayerManager.AddLayerCommand}" CommandParameter="Hydraulic"/>

                <TextBlock Text="Colorization" Margin="0,15,0,5"/>
                <Button Content="Detail Colorization" Command="{Binding LayerManager.AddLayerCommand}" CommandParameter="DetailColorization"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>

</UserControl>