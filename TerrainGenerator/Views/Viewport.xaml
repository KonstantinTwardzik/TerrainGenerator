<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Topographer3D.Views"
             xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
             x:Class="Topographer3D.Views.Viewport"
             mc:Ignorable="d">
    <Grid>
        <hx:Viewport3DX BackgroundColor="#383838" Camera="{Binding ViewportProperty.Camera}" EffectsManager="{Binding ViewportProperty.EffectsManager}" ModelUpDirection="{Binding ViewportProperty.UpDirection}" ShowViewCube="False" FXAALevel="Ultra" MSAA="Maximum">
            <hx:AmbientLight3D Color="{Binding ViewportProperty.AmbientLightColor}" />
            <hx:DirectionalLight3D Direction="{Binding ViewportProperty.Camera.LookDirection}" Color="{Binding ViewportProperty.DirectionalLightColor}" />
            <hx:MeshGeometryModel3D Geometry="{Binding ViewportProperty.TerrainMeshMainGeometry3DProperty}" Material="{Binding ViewportProperty.TerrainMeshMainMaterial}" Transform="{Binding ViewportProperty.TerrainMeshMainTransform}" />
        </hx:Viewport3DX>
    </Grid>
</UserControl>
